Strict

Public

Import cerberus.random
Import mojo2

Import map.tileset
Import scenes.scene

Class Game Implements Scene

	Method Start:Void()
	End Method

	Method Update:Int()
		Return 0
	End Method

	Method Draw:Void(canvas:Canvas)	
		Local color:Float = Rnd(0.1, 0.3)
		canvas.Clear(color, color, color)
		canvas.DrawImage(TileSet.GfxTiles[TileSet.FLOOR1], 32.0, 32.0)
	End Method

End Class