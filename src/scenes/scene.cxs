Strict

Import mojo2

Import exceptions

Interface Scene

	Const KeepRunning:Int = 0
	Const Abort:Int = 1
	Const SkipToNextScene:Int = 2

	Method Start:Void()
	Method Resume:Void()

	' Returns status (KeepRunning, Abort, SkipToNextScene...)
	Method Update:Int()
	
	Method Draw:Void(canvas:Canvas)	

End Interface

Class InvalidSceneOperation Extends Exception
	Method New(msg:String)
		Super.New("InvalidSceneOperation", msg)
	End Method
End Class