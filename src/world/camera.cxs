Strict

Import consts
Import time

Class Camera

	Const Speed:Float = 60.0 ' px / s
	
	Field x:Float, y:Float
	Field x0:Int, y0: Int	' screen origin

	Method New()
		x = 32.0
		y = 32.0
	End Method

	Method Update:Void()
		x = Int(Floor(x + 0.5))
		y = Int(Floor(y + 0.5))
		x0 = Int(Floor(x - CanvasHalfWidth + 0.5))
		y0 = Int(Floor(y - CanvasHalfHeight + 0.5))
	End Method
End Class